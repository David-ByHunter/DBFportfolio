---
import Layout from '@/layouts/Layout.astro';
import Card from '@/components/Card.astro';
import { engineer } from '@/data/engineer';
import { estiem } from '@/data/estiem';
import { it } from '@/data/it';
---

<Layout>
	<main>
		<h1>David Barrero</h1>
		<Card title={engineer.title} description={engineer.description} />
		<Card title={estiem.title} description={estiem.description} />
		<Card title={it.title} description={it.description} />
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}
</style>